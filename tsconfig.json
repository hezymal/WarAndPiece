{
    "compilerOptions": {
        "outDir": "dist",
        "sourceMap": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "app/*": ["src/app/*"],
            "engine/*": ["src/engine/*"]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}